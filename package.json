{
	"name": "m3api",
	"version": "0.6.0",
	"description": "Minimal modern MediaWiki API wrapper.",
	"main": "node.js",
	"type": "module",
	"scripts": {
		"test": "npm-run-all test:*",
		"test-quick": "npm-run-all test:lint test:unit",
		"test:lint": "eslint .",
		"test:unit": "mocha test/unit/",
		"test:node": "NODE_ENV=development mocha test/integration/node.test.js",
		"test:browser": "mocha-headless test/integration/browser.test.js",
		"test:readme": "sed -n '/```/,/```/ { /```$/q; /```/n; p; }' README.md | NODE_ENV=development node --input-type=module --harmony-top-level-await"
	},
	"homepage": "https://github.com/lucaswerkmeister/m3api#readme",
	"bugs": "https://github.com/lucaswerkmeister/m3api/issues",
	"repository": {
		"type": "git",
		"url": "https://github.com/lucaswerkmeister/m3api.git"
	},
	"keywords": [
		"mediawiki"
	],
	"author": "Lucas Werkmeister <mail@lucaswerkmeister.de>",
	"license": "ISC",
	"engines": {
		"node": "^12.22.0 || >=14.17.0"
	},
	"dependencies": {
		"axios": "^0.26.0",
		"axios-cookiejar-support": "^2.0.3",
		"tough-cookie": "^4.0.0"
	},
	"devDependencies": {
		"@sinonjs/fake-timers": "^9.1.0",
		"chai": "^4.3.6",
		"chai-as-promised": "^7.1.1",
		"eslint": "^8.10.0",
		"eslint-config-wikimedia": "^0.22.1",
		"eslint-plugin-chai-friendly": "^0.7.2",
		"eslint-plugin-compat": "^4.0.2",
		"mocha": "^9.2.1",
		"mocha-headless": "^8.0.0",
		"npm-run-all": "^4.1.5"
	},
	"mocha": {
		"recursive": true
	}
}
